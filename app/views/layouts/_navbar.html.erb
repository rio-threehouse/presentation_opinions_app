<header>
  <span class="nav">
    <a href="/"><img src="/images/navlogo.png" alt="報告会アンケート" class="logo"></a>
    <% if logged_in? %>
      <span class="dropdown pull-right text-center button menu">
        <span class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          <i class="fas fa-bars"></i>
        </span>

        <ul class="dropdown-menu" role="menu">
          <li>
            <%= link_to edit_user_path(current_user) do %>
              <i class="fas fa-cog"></i> ユーザ設定
            <% end %>
          </li>
          <li class="divider"></li>
          <li>
            <%= link_to logout_path, method: :delete, data: {confirm: 'ログアウトしますか'} do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト

             <% end %>
          </li>
        </ul>
      </span>

      <div class="text-center">
        <%= link_to root_path do %>
          <span class="button text-center submenu <%= 'activesubmenu' if current_page?(root_path) %>">
            <i class="fas fa-calendar"></i> 報告会一覧
          </span>
        <% end %>
        <%= link_to user_path(current_user) do %>
          <span class="button text-center submenu <%= 'activesubmenu' if current_page?(user_path(current_user)) %>">
            <i class="fas fa-bookmark"></i> アンケート集計
          </span>
        <% end %>
      </div>

    <% else %>
      <%= link_to login_path do %>
        <span class="button text-center pull-right nav1 <%= 'currentnav' if current_page?(login_path) %>">
          <i class="fas fa-sign-in-alt navicon <%= 'currentnav' if current_page?(login_path) %>"></i>
          <br>ログイン
        </span>
      <% end %>
      <%= link_to signup_path do %>
        <span class="button text-center pull-right nav1 <%= 'currentnav' if current_page?(signup_path) %>">
          <i class="fas fa-user-plus navicon <%= 'currentnav' if current_page?(signup_path) %>"></i>
          <br>アカウント登録
        </span>
      <% end %>
    <% end %>
  </span>
</header>
