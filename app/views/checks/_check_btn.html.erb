<% if current_user.check?(comment) %>
  <%= form_for(current_user.checks.find_by(comment_id: comment.id), html: { method: :delete }, remote: true) do |f| %>
    <%= hidden_field_tag :comment_id, comment.id %>
    <%= button_tag type: 'submit', class: 'checkbtn jiyucolor' do %>
      <i class="fas fa-check-circle"></i>
    <% end %>
  <% end %>
<% else %>
  <%= form_for(current_user.checks.build, remote: true) do |f| %>
    <%= hidden_field_tag :comment_id, comment.id %>
    <%= button_tag type: 'submit', class: 'checkbtn' do %>
      <i class="far fa-check-circle"></i>
    <% end %>
  <% end %>
<% end %>
